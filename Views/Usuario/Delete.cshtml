@using tl2_tp10_2023_SofiaaCruz.ViewModels;

@{
    ViewData["Title"] = "Eliminar Usuario";
}

@model DeleteUsuarioViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Usuario" asp-action="DeleteConfirmed" method="post">
    <input hidden asp-for="@Model.Id">
    <p>¿Está seguro de eliminar al usuario '@Model.NombreUsuario'?</p>
    <div>
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary boton">Cancelar</a>
    </div>
</form>