@using tl2_tp10_2023_SofiaaCruz.ViewModels;

@{
    ViewData["Title"] = "Usuario";
}
@model CrearUsuarioViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Usuario" asp-action="Crear" method="post">
    <div class="from-grooup">
        <label for="NombreUsuario">Nombre de Usuario</label>
        <input asp-for="@Model.NombreUsuario" class="form-control" id="NombreUsuario">
        <span asp-validation-for="@Model.NombreUsuario" class="text-danger"></span>
    </div>
     <div>
        <label for="Rol" class="form-label">Rol</label>
            <select asp-for="@Model.Rol" class="form-control" id="Rol">
                <option value="administrador"selected>Administrador</option>
                <option value="operador" >Opetador</option>
            </select>
        <span asp-validation-for="@Model.Rol" class="text-danger"></span>

    </div>
    <div class="from-grooup">
        <label for="Password">Password</label>
        <input asp-for="@Model.Password" class="form-control" id="Password">
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary boton">Enviar</button>
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}