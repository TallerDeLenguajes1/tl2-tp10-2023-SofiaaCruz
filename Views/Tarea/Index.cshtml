@using tl2_tp10_2023_SofiaaCruz.ViewModels;
@{
    ViewData["Title"] = "Tarea";
}

@model GetTareasViewModel
<div class="tex-center">
    <h1 class="display-4">Control Tareas</h1>
    <table class="table table-striped">
        <thead>
            <th scope="col">Id</th>            
            <th scope="col">Id Tablero</th>
            <th scope="col">Nombre</th>
            <th scope="col">Estado</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Color</th>
            <th scope="col">Id del usuario asignado</th>      
        </thead>
        <tbody>
            @foreach(var t in Model.Tareas)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.IdTablero</td>
                    <td>@t.Nombre</td>
                    <td>@t.Estado</td>
                    <td>@t.Descripcion</td>
                    <td>@t.Color</td>
                    <td>@t.IdUsuarioAsignado</td>
                    <td>
                        <button class="btn btn-primary boton">
                            <a asp-controller="Tarea" asp-action="Update" asp-route-id="@t.Id" class="badge badge-primary">Modificar</a>
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-primary boton">
                            <a asp-controller="Tarea" asp-action="Delete" asp-route-id="@t.Id" class="badge badge-primary">Eliminar</a>
                        </button>
                    </td>
                </tr>                
            }
        </tbody>
    </table>
    <div class="d-grid gap-2 col-6 mx-auto">
        <a asp-controller="Tarea" asp-action="Crear">
            <button class="btn btn-primary boton" type="button">Crear Tarea</button>
        </a>
    </div>
</div>