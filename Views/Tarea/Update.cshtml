@using tl2_tp10_2023_SofiaaCruz.ViewModels;
@{
    ViewData["Title"] = "Modificar Tarea";
}

@model UpdateTareaViewModel
<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="Update">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label for="Nombre">Nuevo nombre de la tarea</label>
        <input asp-for="@Model.Nombre" class="form-control" id="Nombre">
    </div>
    <div>
        <label for="Estado" class="form-label">Estado</label>
            <select asp-for="@Model.Estado" class="form-control" id="Estado">
                <option value="Ideas">Ideas</option>
                <option value="ToDo">ToDo</option>
                <option value="Doing">Doing</option>
                <option value="Review">Review</option>
                <option value="Done">Done</option>
            </select>
    </div>
    <div>
        <label for="Descripcion">Nueva descripcion</label>
        <input asp-for="@Model.Descripcion" class="form-control" id="Descripcion">
    </div>
    <div>
        <label for="Color">Nuevo color</label>
        <input asp-for="@Model.Color" class="form-control" id="Color">
    </div>
    <button type="submit" class="btn btn-primary boton">Modificar</button>
</form>