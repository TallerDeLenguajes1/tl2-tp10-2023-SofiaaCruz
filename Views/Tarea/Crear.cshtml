@using tl2_tp10_2023_SofiaaCruz.ViewModels;
@{
    ViewData["Title"] = "Añadir Tarea";
}

@model CrearTareaViewModel
<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="Create">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label for="Nombre">Nombre de la tarea</label>
        <input asp-for="@Model.Nombre" class="form-control" id="Nombre">
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div>
        <label for="Estado" class="form-label">Estado</label>
            <select asp-for="@Model.Estado" class="form-control" id="Estado">
                <option value="Ideas">Ideas</option>
                <option value="ToDo" selected>ToDo</option>
                <option value="Doing">Doing</option>
                <option value="Review">Review</option>
                <option value="Done">Done</option>
            </select>
        <span asp-validation-for="@Model.Estado" class="text-danger"></span>

    </div>
    <div>
        <label for="IdTablero">Id tablero</label>
        <input asp-for="@Model.IdTablero" class="form-control" id="IdTablero">
        <span asp-validation-for="@Model.IdTablero" class="text-danger"></span>

    </div>
    <div>
        <label for="Descripcion">Descripcion</label>
        <input asp-for="@Model.Descripcion" class="form-control" id="Descripcion">
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>

    </div>
    <div>
        <label for="Color">Color</label>
        <input asp-for="@Model.Color" class="form-control" id="Color">
        <span asp-validation-for="@Model.Color" class="text-danger"></span>

    </div>
    <div>
        <label for="UsuarioAsignado">Id de Usuario Asignado</label>
        <input asp-for="@Model.IdUsuarioAsignado" class="form-control" id="UsuarioAsignado">
        <span asp-validation-for="@Model.IdUsuarioAsignado" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary boton">Añadir</button>
</form>